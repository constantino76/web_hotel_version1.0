<section id="galeria">
    <h4 class="bg-secondary text-center">Galeria</h4>


    <div class="row justify-content-center ">
    @foreach (var habitacion in Model)
    {
       
            <div class="col-md-4 mb-4">
                <div class="card shadow-lg border-0">
                    <img src="@habitacion.imageUrl" class="card-img-top" alt="@habitacion.Descripcion"style="height:150px">
                    <div class="card-body">
                        <h5 class="card-title">@habitacion.Descripcion</h5>
                        <p class="card-text">@habitacion.Descripcion</p>
                        <p class="card-text"><strong>₡@habitacion.PrecioPorNoche</strong></p>
                        @if (User.Identity.IsAuthenticated) { //validamos que el usuario este autenticado
                        <a href="@Url.Action("Detalle", "Habitaciones", new { id = habitacion.Numero })" class="btn btn-primary w-100">Ver detalles </a>
                   
                        }
                    
                    </div>
                </div>
            </div>
       
        
    }
    </div>

</section>

      