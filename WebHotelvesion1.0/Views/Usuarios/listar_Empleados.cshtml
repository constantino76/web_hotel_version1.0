@model IEnumerable<WebHotel_vesion1._0.Models.Usuario>




    <div class="container container-fluid mt-3">
    <div class="row justify-content-center">
        <div class="col-12 "style="margin-left:10%">


    <p class="btn btn-small text-center" id="btn-add">
        <a asp-action="Create" class="btn btn-small bg-success text-danger"><i class="fa-solid fa-user-plus"></i>Agregar registro</a>

    </p>
            

          <div class="card card-primary shadow-lg border-0 w-100" style="overflow:hidden">

                 <div class="card-title bg-dark text-center">
                     Usuarios Registrados


                 </div>
<div class="card-body">
    <div  class="table-responsive">

                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>
                                       Id
                                    </th>
                                    <th>
                                       Nombre
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Correo)
                                    </th>
                                    <th>

                                        Rol
                                    </th>
                                    <th>Imagen</th>
                                    <th>Acciones</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int cont = 0;
                                }
                                @foreach (var item in Model)
                                {
                                    cont++;

                                  

                                    <tr>
                                        <td>@cont</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IdUsuario)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NombreCompleto)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Correo)
                                        </td>
                                        <td>
                                            @* validamos  en caso de que este null lalista de usuario o si hay alguno para iterar  *@
                                            @if (item.UsuarioRoles != null && item.UsuarioRoles.Any())
                                            {

                                                foreach (var rol in item.UsuarioRoles)
                                                {

                                                    <strong class="text-blue">@rol.Rol.Nombre</strong>



                                                }


                                            }

                                        </td>
                                        <td>
                                            @* //<img src="@Url.Content("~/"+item.imageUrl)" alt="Imagen de la habitación" width="100" height="150" class="rounded-4" /> *@
                                            <img src="@Url.Content("~/"+item.ImageUrl)?v=@DateTime.Now.Ticks" alt="Imagen de la habitación" width="100" height="100" class="card-image" style="border:1px solid whiteSmoke; border-radius:50%">

                                        </td>

                                        <td class="d-flex gap-2 mt-2">
                                            <a asp-action="Edit" asp-route-id="@item.IdUsuario" class="btn btn-small bg-warning"><i class="fa-solid fa-user-pen text-white"></i>Editar</a>
                                            <a asp-action="MostrarDatosUsuario" asp-route-id="@item.IdUsuario" class="btn btn-small bg-primary"><i class="fa-regular fa-eye"></i>Ver</a>

                                            <a asp-action="Delete" asp-route-id="@item.IdUsuario" class="btn btn-small bg-danger"><i class="fa-solid fa-trash"></i>Eliminar</a>
                                        </td>
                                    </tr>




                                }
                            </tbody>
                        </table>

                       
    </div>

                   


</div>
             

                    </div>


                </div>

            </div>
    




    </div>









<style>
    body{
    
    background-color:purple
    
    }
    #btn-add{
     
    margin-top:40px;
    
    
    
    }



</style> 