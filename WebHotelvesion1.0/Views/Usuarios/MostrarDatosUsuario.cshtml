@using WebHotel_vesion1._0.Models
@* @model WebHotel_vesion1._0.Models.ViewModel.UsuarioViewModel *@

@{
    ViewData["Title"] = "MostrarDatosUsuario";
}
<style>


    body{background-color:whitesmoke
</style>


<div class="container   mt-4 pt-4">
    <div class="row justify-content-center mt-4">
        <div class="col-12 col-md-6">
            <div class="card shadow-lg border-0 ">
    
            
            <div class="card-body">
        <div class="row">

           <div class="col-12 col-md-6">


                            <div class="form-group">
                                <label>Id</label>
                                <p>@Model.IdUsuario</p>

                            </div>


           </div>
                        <div class="col-12 col-md-6">


                            <div class="form-group">
                                <label>Nombre</label>
                                <p>@Model.NombreCompleto</p>

                            </div>


                        </div>


        </div>
       
        <div class="row">

        <div class="col-12 col-md-6">
        <div class="form-group">
         <label>Contrasenia</label>
         <p>@Model.Clave</p>
        </div>
        
        </div>
            <div class="col-12 col-md-6">

                <div class="form-group">
                    <label>Correo</label>
                    <p>@Model.Correo</p>




                </div>
                  </div>

               @if(Model.UsuarioRoles!=null){
                <div class="col-12 col-md-4">
                    <div class="form-group">
                        <label>Rol</label>
                                        @foreach (var rol in Model.UsuarioRoles)
                                        {

                                        <strong class="text-blue">@rol.Rol.Nombre</strong>



                                        }
                    </div>

                </div>

                }

            </div>

              <div class="row justify-content-center mt-2">
              
               <div class="col-md-6"><strong>Fecha de registro</strong><br /> @Model.FechaRegistro</div>
                        <div class="col-md-6 "><strong>Fecha Actualizacion</strong><br />@Model.FechaActualizacion</div>
               
               </div>
            <div class="row justify-content-center">
            
            <div class="col-12 col-md-6 mt-4">
                    <img id="imagenPrevisualizacion" src="@Url.Content("~/"+Model.ImageUrl)" class="card-image " style="width:200px;height:200px; border:1px solid whiteSmoke;border-radius:50% ">

                        </div>
                    </div>


                    <div class=" row justify-content-center shawdow-lg mt-2">
                        <div class="col-6 col-md-4">
                            <a asp-action="listar_Empleados" class="btn btn-warning">Regresar</a>

                        </div>

                    </div>
        </div>



    </div>
            </div>
        </div>
   
</div>


 