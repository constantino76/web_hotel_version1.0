@model WebHotel_vesion1._0.Models.Rol

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Registrar Rol</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">

        <div class="card shadow-lg border-0" style="overflow:hidden">


            <div class="card-body">
                <h3><strong>Registro de roles</strong></h3>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="IdRol" class="control-label"></label>
                        <input asp-for="IdRol" required class="form-control" />
                        <span asp-validation-for="IdRol" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" required  class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                       <div class="row justify-content-center">

                           <div class="col-md-4">
                               <div class="form-group">
                            <a class="btn btn-md bg-warning rounded-3" asp-action="ListarRoles">Cancelar</a>
                        </div>
                        </div>


                        <div class="col-md-4">

                            <div class="form-group">
                                <input type="submit" value="Agregar nuevo" class="btn btn-primary rounded-3" />
                            </div>

                        </div>
                       </div>
                       
                    
                   
                </form>


            </div>

        </div>
      
    </div>
</div>



                        <style>

                            body{background-color:purple;


                        </style>