@model WebHotel_vesion1._0.Models.ViewModel.HabitacionViewModel

@{
    ViewData["Title"] = "Create";
}


<h4>Habitacion</h4>
<div class="row justify-content-center" style="margin-top:8%">
    <div class="col-12 col-md-6">
        <div class="card shadow-lg border-0 "style="overflow:hidden">

            <h4 class="card-header text-dark text-center bg-success">Registro habitaciones</h4>
            <div class="card-body">

                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-12">

                            <div class="form-group">
                                <label asp-for="Numero" class="control-label"></label>
                                <input asp-for="Numero" class="form-control" />
                                <span asp-validation-for="Numero" class="text-danger"></span>
                            </div>

                        </div>


                    </div>
                    <div class="row">

                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="Tipo" class="control-label"></label>
                                <input asp-for="Tipo" class="form-control" required/>
                                <span asp-validation-for="Tipo" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    
                    <div class="row">

                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="PrecioPorNoche" class="control-label"></label>
                                <input asp-for="PrecioPorNoche" class="form-control" required/>
                                <span asp-validation-for="PrecioPorNoche" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                  

                    <div class="row">

                        <div class="col-12">

                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="EstaDisponible" /> @Html.DisplayNameFor(model => model.EstaDisponible)
                                </label>
                            </div>
                        </div>

                    </div>
                    
                    <div class="row">
                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                <label asp-for="Descripcion" class="control-label"></label>
                                <textarea asp-for="Descripcion" class="form-control" rows="5" required></textarea>
                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                            </div>
                        </div>
                       <div class="col-12 col-md-3">
                            <div class="form-group ">
                                
                                <img id="imagenPrevisualizacion" class="card-image " style="width:200px;height:200px; border;1px solid whiteSmoke; border-radius:50% ;background-color:black">
                                <input id="Imagen" name="Imagen" type="file" accept="image/*" required="solo imagenes " onchange="CargarImagen(event)"/>
                            </div>
                        </div>
                        </div>


                    
                       <div class="row justify-content-center">
                           <div class="col-md-4">

                            <div>
                                <a class="btn btn-warning rounded-3"asp-action="listarHabitaciones">Cancelar</a>
                            </div>

                           </div>
                           <div class="col-md-4">

                            <div class="form-group">
                                <input type="submit" value="Registrar" class="btn btn-success" />
                            </div>


                           </div>

                       </div>

                  
                </form>

            </div>
        </div>

    </div>
</div>





                            <style>
                                 body {
                                     background-color: whiteSmoke
                                 }</style>




<script>

   



    // permite visualizar la imagen
    var CargarImagen = function (event) {

        var result = document.getElementById("imagenPrevisualizacion");
        result.src = URL.createObjectURL(event.target.files[0]);

    }

</script>  