            <h4 class="card-header text-dark text-center">Registro habitaciones</h4>
            <div class="card-body">

                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row ">
                      @*   <div class="col-12">


                            <div class="form-group">
