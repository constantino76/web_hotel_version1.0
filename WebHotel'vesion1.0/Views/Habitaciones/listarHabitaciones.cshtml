@model IEnumerable<WebHotel_vesion1._0.Models.Habitacion>

@{
    ViewData["Title"] = "listarHabitaciones";
}

<div class="row "style="margin-top:5%">
    <div class="col-12 col-md-8">

        <p>
            <a class="btn btn-warning " asp-action="Create">Agregar nuevo registro</a>
        </p>


    </div>

    <div class="col-12">

        <div class="card card-secondary  shadow-lg border-0">

            <h3 class="card-header text-center bg-primary">Habitaciones registradas</h3>


            <div class="card-body" >




                 
                <table class="table table-striped" >
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Numero)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Tipo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PrecioPorNoche)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EstaDisponible)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Descripcion)
                                </th>
                                <th>
                                    Imagen
                                </th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Numero)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Tipo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PrecioPorNoche)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EstaDisponible)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    </td>
                                    <td>
                                        <img src="@Url.Content("~/"+item.imageUrl)" alt="Imagen de la habitación" width="100" height="150" class="rounded-4" />

                                    </td>
                                <td class="pt-4 "style="gap:8px">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-small bg-warning"><i class="fa-solid fa-user-pen text-white"></i>Editar</a>
                                    <a asp-action="Details" asp-route-id="@item.Numero" class="btn btn-small bg-primary"><i class="fa-regular fa-eye"></i>Ver</a>

                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-small bg-danger"><i class="fa-solid fa-trash"></i>Borrar</a>
                                </td>
                                </tr>
                            }
                        </tbody>
                    </table>


                



            </div>

    </div>
    
    </div>

</div>








                                        <style>

                                            .card{
                                            
                                            overflow-y:hidden;
                                           min-width:100%
                                            
                                            } 
                                            body{background:purple}

                                        </style>