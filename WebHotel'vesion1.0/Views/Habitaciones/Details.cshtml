@model WebHotel_vesion1._0.Models.Habitacion

@{
    ViewData["Title"] = "Details";
}



<div class="row   justify-content-center "style="margin-top:12%">




   <div class="col-12 col-md-6">

      
       <div class="card card-secondary shadow-lg border-0"style="overflow:hidden">
            <h4 class="card-header text-center">Detalles</h4>
          
           <div class="card-body">

              
               <div class="row ">

                    <div class="col-6">
                        <p>#</p><span></span>
                        <p>@Model.Id</p>

                    </div>
                    <div class="col-6">
                        <p>Descripcion</p><span></span>
                        <p>@Model.Descripcion</p>

                    </div>

               </div>
                   
               <div class="row">
                    <div class="col-5">
                        <p>Foto</p>
                        <img src="@Url.Content("~/"+Model.imageUrl)" alt="Imagen de la habitación" width="200" height="150" />

                    </div>

               </div>


                <div class="row justify-content-center mt-4 ">

                    <div class="col-12 col-md-8">

                        <div class=" border-0">
                          
                            <div class="row">
                                <div class="col-5">

                                    <a class="btn btn-warning" asp-action="listarHabitaciones">Atras</a>
                                </div>
                                <div class="col-5">

                                    <a class="btn btn-danger" asp-route-id="@Model.Id">Eliminar</a>


                                </div>

                            </div>
                                

                            
                          
                               
                            




                        </div>


                    </div>

                 
                    

                </div>


           </div>


       </div>

   </div>
</div>




    

