<div class="row  justify-content-center " style="margin-top:100px">
    <div class="col-12 col-md-8 ">
        

        <div class="card">
            <div class="card-header bg-dark text-center">
                <h3 class="card-text text-success text-center">Edicion </h3>
                <span class="bg-green" ><i class="fa-solid fa-file-pen"></i></span>
            </div>
            <div class="card-body bg-dark">

               

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="IdUsuario" class="control-label"></label>
                      

                          
                               
                                <input asp-for="IdUsuario" class="form-control" readonly />
                                <span asp-validation-for="IdUsuario" class="text-danger"></span>
                         

                    
                      
                    </div>
                    <div class="form-group">
                        <label asp-for="NombreCompleto" class="control-label"></label>
                       
                        <div class="input-group bg-white">

                            <div class="input-group-prepend w-100">
                            <span ><i class="fa-solid fa-user"></i></span>
                            <input asp-for="NombreCompleto" class="form-control" />
                            <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                        </div>
                       
                    </div>
            </div>

                       
                            <div class="form-group">
                                <label asp-for="Correo" class="control-label"></label>
                                <div class="input-group bg-white">
                            <div class="input-group-prepend w-100">
                                <span class="bg-white"><i class="fa-solid fa-envelope "></i></span>
                                <input asp-for="Correo" class="form-control"  />
                                <span asp-validation-for="Correo" class="text-danger"></span>

                            </div>

                                </div>
                              
                            </div>


                    <div class="row">
                        <div class="col-7">

                            <div class="form-group">
                                <label asp-for="Clave" class="control-label"></label>
                                <div class="input-group bg-white">
                                    <div class="input-group-prepend w-100">
                                        <span><i class="fa-solid fa-key"></i></span>
                                        <input asp-for="Clave" class="form-control" />
                                        <span asp-validation-for="Clave" class="text-danger"></span>
                                    </div>
                                </div>
                                
                            </div>
                        </div>



                        <div class="col-4">

                            <div class="form-group">

                                <label for="IdRol"> Rol</label>
                                <select name="IdRol" class="form-control bg-primary text-dark">
                                    @foreach (var rol in Model.Roles)
                                    {


                                        <option value="@rol.IdRol" style="cursor:crosshair">@rol.Nombre</option>

                                    }

                                </select>



                            </div>
                            


                        </div>


                    </div>
                    <div class="row justify-content-center">
                        <div class="col-12 col-md-4" style="margin-bottom:2px">
                            <a asp-action="listar_Empleados" class="btn   bg-warning btn-outline">Atras</a>
                        </div>

                        <div class="col-12 col-md-4">

                            <input type="submit" value="Salvar cambios" class="btn btn-success" />

                        </div>



                    </div>
                </form>


            </div>


        </div>
      
    </div>
</div>
                          <style>
                 #NombreCompleto , #Correo, #Clave {
        border: none !important
         }
