@model IEnumerable<WebHotel_vesion1._0.Models.Usuario>




    <div class="container container-fluid mt-3">
    <div class="row justify-content-center">
        <div class="col-12 ">


    <p class="btn btn-small" id="btn-add">
        <a asp-action="Create" class="btn btn-small bg-dark" class="text-center"><i class="fa-solid fa-user-plus"></i>Agregar registro</a>

    </p>
            

          <div class="card card-primary shadow-lg border-0 w-100" style="overflow:hidden">

                 <div class="card-title bg-dark text-center">
                     Usuarios Registrados


                 </div>
<div class="card-body">
    <div  class="table-responsive">

                        <table class="table table-striped table-responsive">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>
                                       Id
                                    </th>
                                    <th>
                                       Nombre
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Correo)
                                    </th>
                                    <th>

                                        Rol
                                    </th>
                                    <th>Acciones</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int cont = 0;
                                }
                                @foreach (var item in Model)
                                {
                                    cont++;

                                  

                                    <tr>
                                        <td>@cont</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IdUsuario)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NombreCompleto)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Correo)
                                        </td>
                                        <td>
                                            @* validamos  en caso de que este null lalista de usuario o si hay alguno para iterar  *@
                                            @if (item.UsuarioRoles != null && item.UsuarioRoles.Any())
                                            {

                                                foreach (var rol in item.UsuarioRoles)
                                                {

                                                    <strong class="text-blue">@rol.Rol.Nombre;</strong>



                                                }


                                            }

                                        </td>


                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.IdUsuario" class="btn btn-small bg-warning"><i class="fa-solid fa-user-pen text-white"></i>Editar</a>
                                            <a asp-action="MostrarDatosUsuario" asp-route-id="@item.IdUsuario" class="btn btn-small bg-primary"><i class="fa-regular fa-eye"></i>Ver</a>

                                            <a asp-action="Delete" asp-route-id="@item.IdUsuario" class="btn btn-small bg-danger"><i class="fa-solid fa-trash"></i>Eliminar</a>
                                        </td>
                                    </tr>




                                }
                            </tbody>
                        </table>


    </div>

                   


</div>
             

                    </div>


                </div>

            </div>
    




    </div>









<style>
    body{
    
    background-color:purple
    
    }
    #btn-add{
     
    margin-top:40px;
    
    
    
    }



</style> 