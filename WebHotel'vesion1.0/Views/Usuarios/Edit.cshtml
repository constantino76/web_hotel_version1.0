@model WebHotel_vesion1._0.Models.ViewModel.UsuarioViewModel

@{
    ViewData["Title"] = "Edit";
}


<hr />
<div class="row  justify-content-center " style="margin-top:50px">
    <div class="col-12 col-md-6">
        

        <div class="card  shadow-lg  border-0 card-warning">
            <div class="card-header  text-center">
                <h3 class="card-text text-white text-center">Edicion </h3>
               
            </div>
            <div class="card-body">

               

                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="row">
                        <div class="col-12"></div>
                        <div class="form-group">
                          




                            <input asp-for="IdUsuario" class="form-control" hidden />
                            <span asp-validation-for="IdUsuario" class="text-danger"></span>




                        </div>

                    </div>
                  

                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="NombreCompleto" class="control-label"></label>

                                <div class="input-group bg-white">

                                    <div class="input-group-prepend w-100">
                                        <span><i class="fa-solid fa-user"></i></span>
                                        <input asp-for="NombreCompleto" class="form-control" />
                                        <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

              
                    <div class="row">
                        <div class="col-12">

                            <div class="form-group">
                                <label asp-for="Correo" class="control-label"></label>
                                <div class="input-group bg-white">
                                    <div class="input-group-prepend w-100">
                                        <span><i class="fa-solid fa-envelope "></i></span>
                                        <input asp-for="Correo" class="form-control" />
                                        <span asp-validation-for="Correo" class="text-danger"></span>

                                    </div>

                                </div>

                            </div>


                        </div>
                    </div>
                       
                        


                    <div class="row">
                        <div class="col-7">

                            <div class="form-group">
                                <label asp-for="Clave" class="control-label"></label>
                                <div class="input-group bg-white">
                                    <div class="input-group-prepend w-100">
                                        <span><i class="fa-solid fa-key"></i></span>
                                        <input asp-for="Clave" class="form-control" />
                                        <span asp-validation-for="Clave" class="text-danger"></span>
                                    </div>
                                </div>
                                
                            </div>
                        </div>



                        <div class="col-4">

                            <div class="form-group">

                                <label for="IdRol"> Rol</label>
                                <span></span>
                                <select name="IdRol" class="form-control bg-primary text-dark" required>
                                    <option value="" disabled selected>Seleccione un rol</option>  @*obliga selecionar una opcion  *@



                                    @foreach (var rol in Model.Roles)
                                    {


                                        <option value="@rol.IdRol" style="cursor:crosshair">@rol.Nombre</option>

                                    }

                                </select>



                            </div>
                            


                        </div>


                    </div>


                   <div class="row">

                       <div class="col-md-4">
                           <label>Foto</label>
                            <div class="form-group ">
                                <img id="imagenPrevisualizacion" src="@Url.Content("~/"+Model.imageUrl)" class="card-image " style="width:200px;height:200px; ">
                                <input id="Imagen" name="Imagen" type="file" accept="image/*" required="solo imagenes " onchange="CargarImagen(event)" />
                            </div>



                       </div>


                   </div>
                    <div class="row justify-content-center">
                        <div class="col-12 col-md-4" style="margin-bottom:2px">
                            <a asp-action="listar_Empleados" class="btn   bg-dark btn-outline">Atras</a>
                        </div>

                        <div class="col-12 col-md-4">

                            <input type="submit" value="Salvar cambios" class="btn btn-warning" />

                        </div>



                    </div>
                </form>


            </div>


        </div>
      
    </div>



</div>



<script>


    var CargarImagen = function (event) {

        var result = document.getElementById("imagenPrevisualizacion");
        result.src = URL.createObjectURL(event.target.files[0]);

    }

</script>
<style>



    .input-group{
    border:2px solid whiteSmoke;
     border-radius:12px;
    
    }
                 #NombreCompleto , #Correo, #Clave {
        border: none !important
         }


    .input-group {
        color: crimson !important;
        /* margin-left:4px !important; */
        /* width:99% */
    }


                          </style>