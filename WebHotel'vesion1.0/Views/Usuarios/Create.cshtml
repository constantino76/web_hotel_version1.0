                                        <label asp-for="NombreCompleto" class="control-label"></label>
                                        <div class="input-group bg-white">
                                            <div class="input-group-prepend w-100">
                                                <span><i class="fa-solid fa-user"></i></span>
                                                <input asp-for="NombreCompleto" class="form-control" required placeholder="Nombre Completo" />
                                                <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                                            </div>



                                        </div>

                                    </div>
                                </div>

                            </div>


                            <div class="row justify-content-center mt-1">
                                <div class="col-12">


                                    <div class="form-group">
                                        <label asp-for="Correo" class="control-label"></label>
                                        <div class="input-group bg-white">
                                            <div class="input-group-prepend w-100 ">
                                                <span><i class="fa-solid fa-envelope"></i></span>
                                                <input asp-for="Correo" class="form-control" required placeholder="Correo" />
                                                <span asp-validation-for="Correo" class="text-danger"></span>
                                            </div>



                                        </div>

                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-8 ">
                                    <div class="form-group">
                                        <label asp-for="Clave" class="control-label"></label>
                                        <div class="input-group bg-white">
                                            <div class="input-group-prepend w-100">
                                            <span><i class="fa-solid fa-key"></i></span>
                                            <input asp-for="Clave" class="form-control" required placeholder="Clave" />
                                            <span asp-validation-for="Clave" class="text-danger"></span>
                                        </div>
                                        </div>

                                    </div>
                                </div>

                                <div class="col-3">
                                    <div class="form-group">
                                        <label for="IdRol" class="control-label">Rol</label>
                                        <select name="IdRol" class="form-control bg-light text-dark" required>
                                        <option value="" disabled selected>Seleccione un rol</option>  @*obliga selecionar una opcion  *@
                                            @foreach (var rol in Model.Roles)
                                            {
                                                <option value="@rol.IdRol">@rol.Nombre</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                          <div class="row">
                             <div class="col-12 col-md-8">

                                <div class="form-group ">
                                    <img id="imagenPrevisualizacion" class="card-image" style="width:200px;height:200px; ">
                                    <input id="Imagen" name="Imagen" type="file" accept="image/*" required="solo imagenes " onchange="CargarImagen(event)" />
                                </div>
                            </div>



                             


                          </div>




                            <div class="row justify-content-center">
                                <div class="col-12 col-md-4" style="margin-bottom:2px">
                                    <a asp-action="listar_Empleados" class="btn   bg-warning btn-outline">Atras</a>
                                </div>

                                <div class="col-12 col-md-4">

                                    <input type="submit" value="Agregar registro" class="btn btn-success" />

                                </div>



                            </div>
                        </form>


                    </div>

                   
                </div>
        </div>
    </div>

              











            
   
        
        
        
        </body>







</html>



<script>


    var CargarImagen = function (event) {

        var result = document.getElementById("imagenPrevisualizacion");
        result.src = URL.createObjectURL(event.target.files[0]);

    }

